@page ""
@using ImperialInventoryManagement.Models;
@model ImperialInventoryManagement.Pages.FacilitiesModel
@{
}

<div class="text-center">
    <div class="container">
        <form method="get">
            <button type="submit" asp-page="/AddFacility">New Facility</button>
        </form>
    </div>
    
</div>

<div class="container">
    <table class="table table-striped">
        <thead>
            <tr>
                <th>Name</th>
                <th>Location</th>
                <th>Inventory Value</th>
            </tr>
        </thead>
    
    <tbody>
        @if(Model.Facilities != null)
        {
        @foreach(Facility f in Model.Facilities)
        {
           if (f != null)
             {
                <tr>
                <td>@f.Name </td>
                <td>@f.Location</td>
                <td><a href="/FacilityInventory/@f.Id">0</a></td>
                </tr>
             }
         }
        }
    </tbody>
    </table>
</div>
