@page 
@using ImperialInventoryManagement.Models;
@model ImperialInventoryManagement.Pages.CreateItemModel
@{
}



<div class="container">
    <form id="form" method="post">
        <div class="form-group">
            <label asp-for="ItemView.Name" class="control-label"></label>
            <input asp-for="@Model.ItemView.Name">
            <span asp-validation-for="ItemView.Name" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="ItemView.Description" class="control-label"></label>
            <input asp-for="@Model.ItemView.Description">
            <span asp-validation-for="ItemView.Description" class="text-danger"></span>
        </div>
        <div >
            <label for="category-select">
                Select Categories </br>
                <select id="category-select" class="category-select form-control" asp-for="ItemView.SelectedCategoryIds" asp-items="Model.Categories" multiple="multiple">
            </select>
            </label>
        </div>
        </br>
        </br>

        <div class="form-group">
            <label asp-for="ItemView.Min" class="control-label"></label>
            <input asp-for="@Model.ItemView.Min">
            <span asp-validation-for="ItemView.Min" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="ItemView.Max" class="control-label"></label>
            <input asp-for="@Model.ItemView.Max">
            <span asp-validation-for="ItemView.Max" class="text-danger"></span>
        </div>
        
        <div class="form-group">
            <label asp-for="ItemView.Value" class="control-label"></label>
            <input asp-for="@Model.ItemView.Value">
            <span asp-validation-for="ItemView.Value" class="text-danger"></span>
        </div>

        <div class="form-group">
            <br/>
            <input type="submit"/>
        </div>
    </form>
</div>




